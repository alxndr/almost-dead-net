{
  "name": "almost-dead-net",
  "homepage": "http://almost-dead.net",
  "version": "3.0.0",
  "repository": "https://github.com/alxndr/almost-dead-net",
  "private": true,
  "license": "UNLICENSED",
  "author": "@alxndr",
  "scripts": {
    "build": "gatsby build",
    "clean": "gatsby clean",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "deploy": "export TAG=deploy-$(date '+%F-%H%M%S-%Z') && gatsby build && gh-pages --dist public --dotfiles --branch gh-pages --tag $TAG --message \"Deploy $TAG\" && echo cleaning up... && gh-pages-clean",
    "develop": "gatsby develop",
    "lint": "eslint src/ cypress/",
    "postdeploy": "npm run clean",
    "postlint": "echo ... linting success",
    "prelint": "echo linting...",
    "pretest": "npm run lint",
    "pretest:e2e": "echo Starting Cypress integration tests...",
    "serve": "gatsby serve",
    "start": "echo 'npm run develop' or 'npm run serve' && exit 1",
    "test": "npm run test:e2e",
    "test:e2e": "WAIT_ON_TIMEOUT=600000 start-server-and-test develop :8000 cy:run",
    "test:prod": "CYPRESS_BASE_URL=https://almost-dead.net cy:run"
  },
  "dependencies": {
    "@sentry/browser": "^6.3.0",
    "classnames": "^2.2.6",
    "dompurify": "^2.2.4",
    "gatsby": "^3.0.1",
    "gatsby-plugin-gatsby-cloud": "^2.0.0",
    "gatsby-plugin-google-fonts": "^1.0.1",
    "gatsby-plugin-image": "^1.0.0",
    "gatsby-plugin-manifest": "^3.0.0",
    "gatsby-plugin-offline": "^4.0.0",
    "gatsby-plugin-react-helmet": "^4.0.0",
    "gatsby-plugin-sharp": "^3.0.0",
    "gatsby-source-filesystem": "^3.0.0",
    "gatsby-transformer-sharp": "^3.0.0",
    "logrocket": "^1.0.14",
    "papaparse": "^5.3.0",
    "prop-types": "^15.7.2",
    "ramda": "^0.27.1",
    "react": "^17.0.1",
    "react-autosuggest": "^10.0.2",
    "react-dom": "^17.0.1",
    "react-helmet": "^6.1.0",
    "react-tippy": "^1.4.0",
    "slugify": "^1.5.0"
  },
  "devDependencies": {
    "cypress": "^7.1.0",
    "eslint": "7.22.0",
    "gh-pages": "^3.1.0",
    "start-server-and-test": "^1.12.1"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "node": true
    },
    "extends": "react-app",
    "ignorePatterns": [
      "serviceWorker.js",
      "setupTests.js"
    ],
    "rules": {
      "semi": [
        "warn",
        "never"
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
